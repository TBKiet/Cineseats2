    <script>
        const seats = document.querySelectorAll('.seat:not(.unavailable):not(.empty)');

        // Add a click event listener to each seat
        seats.forEach((seat) => {
            seat.addEventListener('click', () => {
                seat.classList.toggle('selected');
            });
        });
        document.addEventListener('DOMContentLoaded', function () {
            function drawRectangle() {
                const topLeft = document.getElementById('seat-top-left');
                const bottomRight = document.getElementById('seat-bottom-right');

                if (topLeft && bottomRight) {
                    const topLeftRect = topLeft.getBoundingClientRect();
                    const bottomRightRect = bottomRight.getBoundingClientRect();

                    // Amount by which to expand the rectangle (in pixels)
                    const expandBy = 10;

                    // Calculate dimensions including scroll offset and expansion
                    const rectangle = document.getElementById('rectangle');

                    // Adjust left and top positions
                    const left = topLeftRect.left + window.scrollX - expandBy / 2;
                    const top = topLeftRect.top + window.scrollY - expandBy / 2;

                    // Adjust width and height
                    const width = bottomRightRect.right - topLeftRect.left + expandBy / 2 + 1;
                    const height = bottomRightRect.bottom - topLeftRect.top + expandBy / 2 + 1;

                    // Apply styles to the rectangle
                    rectangle.style.left = `${left}px`;
                    rectangle.style.top = `${top}px`;
                    rectangle.style.width = `${width}px`;
                    rectangle.style.height = `${height}px`;

                    // Ensure rectangle stays visible
                    rectangle.style.position = 'absolute';
                    rectangle.style.pointerEvents = 'none'; // Prevent interference with seats
                }
            }

            // Initial draw
            drawRectangle();

            // Handle both horizontal and vertical scrolling
            document.querySelector('.theater-container').addEventListener('scroll', drawRectangle);
            window.addEventListener('scroll', drawRectangle);
            window.addEventListener('resize', drawRectangle);
        });
    </script>

