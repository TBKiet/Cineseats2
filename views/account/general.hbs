<section class="d-flex">
    {{> sidebar2 }}
    <div class="d-flex flex-md-row p-0">
        <!-- User Info Section -->
        <section class="container col-md-4 m-5 py-4 bg-white rounded shadow">
            <div class="d-flex justify-content-center align-items-center mb-4">
                <img id="profile-picture" src="{{user.avatar_url}}" alt="User" class="rounded-circle me-2"
                     style="width: 100px; height: 100px;"/>
                <div>
                    <div class="fw-bold" id="user-full-name">{{user.name}}</div>
                    <div class="small" id="role">
                        <i class="fa-solid fa-medal"></i>{{user.role}}
                    </div>
                </div>
            </div>
            <hr>
            <div class="text-center m-4 pb-4 d-flex justify-content-between align-items-center">
                <h3 class="h6 mb-0">Tổng chi tiêu 2024 <i class="fas fa-info-circle text-muted small"></i></h3>
                <p class="text-warning fs-5 fw-bold mb-0" id="user-spent">{{user.accumulated_points}} đ</p>
            </div>
            <!-- Progress Bar Section -->
            <div class="position-relative m-4">
                <div class="d-flex justify-content-between position-absolute w-100" style="top: -30px;">
                    <i class="fas fa-medal text-warning fs-4"></i>
                    <i class="fas fa-star text-primary fs-4"></i>
                    <i class="fas fa-tools text-warning fs-4"></i>
                </div>
                <div class="progress" style="height: 8px;">
                    <div id="progress-bar" class="progress-bar bg-primary" role="progressbar"></div>
                </div>
                <div class="d-flex justify-content-between position-absolute w-100" style="top: -5px;">
                    <span class="rounded-circle bg-white border border-primary"
                          style="width: 16px; height: 16px;"></span>
                    <span class="rounded-circle bg-white border border-primary"
                          style="width: 16px; height: 16px;"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between m-4 text-secondary small">
                <span>0 đ</span>
                <span>2.000.000 đ</span>
                <span>4.000.000 đ</span>
            </div>
        </section>

        <!-- Personal Information Section -->
        <section class="col-md-7 container mx-0 my-5 pb-4 bg-white rounded shadow">
            <h1 class="mb-4 fw-bold">Personal Information</h1>
            <form id="user-info-form" enctype="multipart/form-data">
                <div class="d-flex align-items-center mb-4">
                    <div class="position-relative">
                        <img id="profile-picture-edit" src="{{user.avatar_url}}" alt="Profile picture"
                             class="rounded-circle me-3" style="width: 100px; height: 100px;"/>
                        <label for="upload-profile-picture"
                               class="fas fa-camera position-absolute bottom-0 end-0 bg-white p-2 rounded-circle text-secondary border"></label>
                        <input type="file" id="upload-profile-picture" name="avatar_url" accept="image/*"
                               style="display: none;"/>
                    </div>
                </div>
                <div class="row g-3">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <label class="form-label text-secondary">Name</label>
                        <div class="position-relative">
                            <input id="first-name" name="name" type="text" class="form-control pe-5"
                                   style="height: 40px;" value="{{user.name}}"/>
                            <i class="fas fa-user position-absolute"
                               style="top: 50%; right: 10px; transform: translateY(-50%); color: #6c757d;"></i>
                        </div>
                    </div>
                    <!-- Email -->
                    <div class="col-md-6">
                        <label class="form-label text-secondary">Email</label>
                        <div class="position-relative">
                            <input id="email" name="email" type="email" class="form-control pe-5"
                                   value="{{user.email}}"/>
                            <i class="fas fa-envelope position-absolute"
                               style="top: 50%; right: 10px; transform: translateY(-50%); color: #6c757d;"></i>
                        </div>
                    </div>
                    <!-- Phone Number -->
                    <div class="col-md-6">
                        <label class="form-label text-secondary">Phone Number</label>
                        <div class="position-relative">
                            <input id="phone" name="phone" type="text" class="form-control pe-5"
                                   value="{{user.phone}}"/>
                            <i class="fas fa-phone position-absolute"
                               style="top: 50%; right: 10px; transform: translateY(-50%); color: #6c757d;"></i>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Update</button>
            </form>
        </section>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", async () => {
        try {

            // Populate user info card

            const avatarUrl = "https://placehold.co/100x100";
            document.getElementById("profile-picture").src = avatarUrl;
            document.getElementById("profile-picture-edit").src = avatarUrl;
            // Populate progress bar
            const progressBar = document.getElementById("progress-bar");
            const userSpent = document.getElementById("user-spent");
            const accumulated_points = documents.getElementById("accumulated_points");

            const maxSpent = 4000000;
            const progress = (user.accumulated_points / maxSpent) * 100;
            progressBar.style.width = `${progress}%`;
            userSpent.textContent = `${user.accumulated_points} đ`;


        } catch (error) {
            console.error("Error loading user data:", error);
            alert("Failed to load user data.");
        }
    });
</script>